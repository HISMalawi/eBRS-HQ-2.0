<script>

function dataT(){          
  dataTable = jQuery('#report').dataTable({
      dom: 'Bfrtip',
        buttons: [
            {
                extend: 'copyHtml5',
                exportOptions: {
                 columns: ':contains("Office")'
                }
            },
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5'
        ],
      "pageLength": 10,
      "processing": true
    });
}


function addRows(data) {
  var records = JSON.parse(data);
  counter = 0;
  for (var username in records) {
    for (var action_date in records[username]) {
      for(var i = 0 ; i < records[username][action_date].length ; i++) {
        console.log(records[username][action_date][i]['action']) 
        var action_datetime   = records[username][action_date][i]['action_datetime'];
        var action            = records[username][action_date][i]['action'];
        var first_name        = records[username][action_date][i]['first_name'];
        var middle_name       = records[username][action_date][i]['middle_name'];
        var last_name         = records[username][action_date][i]['last_name'];

        dataTable.api().row.add([action_datetime, username, first_name, middle_name, last_name, action]).draw();
      }
    }
  }
}

function fetchData() {                                                       
                                                                            
  if (window.XMLHttpRequest) {// code for IE7+, Firefox, Chrome, Opera, Safari  
    xmlhttp=new XMLHttpRequest();                                             
  }else{// code for IE6, IE5                                                  
    xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");                           
  }                                                                           
  xmlhttp.onreadystatechange=function() {                                     
    if (xmlhttp.readyState==4 && xmlhttp.status==200) {                       
      var results = xmlhttp.responseText;                                     
      if(results == 'undefined' || results == '' || results == '"not validate"') {                           
        return;                                                               
      }else{                                                                  
        dataTable.fnClearTable();
        addRows(results);    
      }                                                                       
    }                                                                         
  }      

  var start_date  = document.getElementById('start_date').value.replace(/\//g, '-');
  var end_date    = document.getElementById('end_date').value.replace(/\//g, '-');
                                                                     
  xmlhttp.open("GET","/get_user_audit_trail/" + start_date + "/" + end_date, true);           
  xmlhttp.send();                                                             
}


</script>

