
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">


<style type="text/css">
  ${demo.css}
</style>

<script type="text/javascript">
function getMonthStr(i) {
  months = ['Jan','Feb','Mar','Apr','May','June','Jul','Aug','Sep','Oct','Nov','Dec'];
  return months[i];
}

var stats_months = [];
var stats_series = [];
var series = [];

<%(@stats_months).each do |m|%>
  var m = getMonthStr(<%= (m - 1) %>);
  stats_months.push(m);
<%end%>

<%(@districts_stats || {}).each do |code, data|
  (data || []).each do |s|%>
    series.push(<%= s %>);
  <%end%>
  stats_series.push({name: "<%=code%>", data: series});
  series = [];
<%end%>



function renderChart(stats) {
  $i(function () {
  $i('#bar-chart').highcharts({
      chart: {
        type: 'line'
      },
      title: {
          text: 'Last 12 months reported births',
          x: -20 //center
      },
      subtitle: {
          text: '',
          x: -20
      },
      xAxis: {
          categories: stats_months
      },
      yAxis: {
          min: 0,
          title: {
              text: 'No. of births'
          },
          plotLines: [{
              value: 0,
              width: 1,
              color: '#808080'
          }]
      },
      tooltip: {
          valueSuffix: ''
      },
      legend: {
          layout: 'vertical',
          align: 'right',
          verticalAlign: 'middle',
          borderWidth: 0
      },
      exporting: {
        enabled: false
      },
      credits: {
        enabled: false
      },
      series: stats
  });
  });
}


renderChart(stats_series);
</script>

<body>

<div style="border-style: solid; border-width: 2px 0px 0px 0px; border-color: lightgrey;">&nbsp;</div>

<div id="bar-chart" style="width: 100%; height: 600px; margin: 0 auto"></div>

</body>
</html>
