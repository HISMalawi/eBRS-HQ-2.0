<style>


.panel-btns-main-containers {
  width: 100%;
}

.dashboard-title {
  margin-left: 1%;
}

.separator-line {
  width: 100%;
  border-style: solid;
  border-width: 1px 0px 0px 0px;
}

#table-container {
  display: table;
  width: 100%;
}

.rows  {
  display: table-row;
  width: 100%;
}

.cells {
  display: table-cell;
  padding: 10px;
}


</style>


<div class='dashboard-title'><h3><%= @section%></h3></div>

<div class='separator-line'>&nbsp;</div>


<div id='button-container' class="panel-btns-main-containers">
       <%(@tasks || []).each do |title, desc, stauses, link, icon|%>
              <% @link = link+"?" + stauses.collect{|w| "statuses[]=#{w}"}.join("&") +"&destination="+title%>
              <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2" onclick="window.location='<%=@link%>'">
                <div class="divbtn">
                    <span class="icons">
                        <img class="icon-attr" src="<%= icon %>">
                        <p><%=title%></p>
                    </span>
                </div>
                
              </div>
        <%end%>
</div>
