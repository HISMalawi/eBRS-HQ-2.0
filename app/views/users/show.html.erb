<style>

    .record td {
        font-size: 18px;
        font-style: italic;
        color: #000;
    }

    .record td strong {
        font-size: 14px;
        font-style: normal;
        color: #3465a4;
    }

    fieldset {
        margin: 20px;
        border-radius: 5px;
        border: 1px solid #3465a4;
        padding: 20px;
    }

    legend {
        font-size: 18px;
        font-weight: normal;
        color: #3465a4;
    }

    .btn-ctrls {
      text-align: right;
    }

</style>

<fieldset>
  <legend>
    User Details
  </legend>

  <fieldset style="border: 1px solid #eee;">
  <table class="record" style="margin: auto;" cellpadding="10" cellspacing="5">
    <tr>
      <td colspan="3">
        <p id="notice"><%= notice %></p>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Username:</strong>
      </td>
      <td>
        :
      </td>
      <td>
        <%= @user.username %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>First Name:</strong>
      </td>
      <td>
        :
      </td>
      <td>
       <%= @user.core_person.person_name.first_name %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Last Name:</strong>
      </td>
      <td>
        :
      </td>
      <td>
       <%= @user.core_person.person_name.last_name %>
      </td>
    </tr>


    <tr>
      <td>
        <strong>Role:</strong>
      </td>
      <td>
        :
      </td>
      <td>
        <%= @user.user_role.role.role rescue '' %>
      </td>
    </tr>


    <tr>
      <td>
        <strong>Created:</strong>
      </td>
      <td>
        :
      </td>
      <td>
        <%= @user.created_at.to_date.strftime("%d/%b/%Y") rescue nil %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Updated:</strong>
      </td>
      <td>
        :
      </td>
      <td>
        <%= @user.updated_at.to_date.strftime("%d/%b/%Y") rescue nil %>
      </td>
    </tr>

  </table>

  </fieldset>

  <fieldset style="border: 1px solid #eee;"></fieldset>

  <div class="btn-ctrls">
    <%unless @user.blocked %>
      <button onclick="javascript:location='/block/<%=@user.id%>'"
        class="btn btn-warning btn-lg"><i class="fa fa-lock"></i>&nbsp;Block</button>
    <%else%>
      <button onclick="javascript:location='/unblock/<%=@user.id%>'"
        class="btn btn-warning btn-lg"><i class="fa fa-unlock"></i>&nbsp;Unblock</button>
    <%end%>

    <button onclick="javascript:location='/edit/<%=@user.id%>'"
                  class="btn btn-success btn-lg"><i class="fa fa-lock"></i>&nbsp;Edit</button>
    
    <button onclick="javascript:location='/users'"
                  class="btn btn-primary btn-lg"><i class="fa fa-chevron-circle-left"></i>&nbsp;Back</button>
  </div>
</fieldset>
